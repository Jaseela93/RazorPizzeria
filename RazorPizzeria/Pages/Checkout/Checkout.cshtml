@page
@model RazorPizzeria.Pages.Checkout.CheckoutModel
@{
}
 <h1>Your Ordern!</h1>
@{
    var imagePath = "~/css/images/Pizzas/" + (@Model.ImageTitle + ".png");
}
 <div class="align-content-center">
     <div class="col-3 mx-auto mb-5">
         <img src=@imagePath class="w-100" asp-append-version="true" />
         <p>Your Order For the @Model.PizzaName is ready!</p>
         <p>Total Price for your order is : @Model.PizzaPrice AED</p>
         <br/>
         <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
     </div>
 </div>